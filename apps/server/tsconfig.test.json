{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["vitest/globals"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@promptia/schemas": ["../../packages/schemas/src"],
      "@promptia/types": ["../../packages/types/src"],
      "@promptia/utils": ["./src/utils/src"],
      "@promptia/database": ["./database/src"],
      "@promptia/constants": ["../../packages/constants/src"]
    }
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "vitest.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
