{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@promptia/schemas": [
        "../../packages/schemas/src"
      ],
      "@promptia/types": [
        "../../packages/types/src"
      ],
      "@promptia/utils": [
        "./src/utils/src"
      ],
      "@promptia/database": [
        "./database/src"
      ],
      "@promptia/constants": [
        "../../packages/constants/src"
      ]
    },
    "types": [
      "vitest/globals"
    ]
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "database/**/*",
    "vitest.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}